<div class="container">
   <div class="row">
      <div class="col s12 m3">
        <div class="row">
          <div class="panel-heading">Food Preferences
          </div>
          <% @food_preferences.each do |fp| %>
          <p><%= fp.name%></p>
          <%end%>
          </div>
     
      <div class="row">
          <div class="panel-heading">Food Type
          </div>
          <% @food_types.each do |ft| %>
          <p><%= ft.name%></p>
          <%end%>
      </div>
      <div class="row">
          <div class="panel-heading">Cuisine
          </div>
          <% @cuisines.each do |c| %>
          <p><%= c.name%></p>
          <%end%>
          
      </div>
     </div> 
      <div class="col s12 m9"> 




   


      <%- model_class = Recipe -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:title) %></th>
            <th><%= model_class.human_attribute_name(:cooking_time) %></th>
            <th><%= model_class.human_attribute_name(:difficulty_level) %></th>
            <th><%= model_class.human_attribute_name(:food_type_id) %></th>
            <th><%= model_class.human_attribute_name(:food_preference_id) %></th>
            <th><%= model_class.human_attribute_name(:cuisine_id) %></th>
            <th><%= model_class.human_attribute_name(:ingredients) %></th>
            <th><%= model_class.human_attribute_name(:procedure) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
            <tr>
              <td><%= link_to recipe.id, recipe_path(recipe) %></td>
              <td><%= recipe.title %></td>
              <td><%= recipe.cooking_time %></td>
              <td><%= recipe.difficulty_level %></td>
              <td><%= recipe.food_type_id %></td>
              <td><%= recipe.food_preference_id %></td>
              <td><%= recipe.cuisine_id %></td>
              <td><%= recipe.ingredients %></td>
              <td><%= recipe.procedure %></td>
              <td><%=l recipe.created_at %></td>
              <td>

                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_recipe_path(recipe), :class => 'btn btn-default btn-xs' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            recipe_path(recipe),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
              </td>
              <td><%= link_to 'Show', recipe, :class=>"btn btn-
primary btn-small"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_recipe_path,
                  :class => 'btn btn-primary' %>
      </div>
     </div>
   </div>  