<div class="row recipes_header">
<%= render 'layouts/navbar' %>
   <div class="container">
      <h3>All Recipes</h3>
   </div>
</div>

<div class="container">
<div class="row">
     

      <div class="col s12 m12"> 


          <% @recipes.each do |recipe| %>


        <div class="col s12 m3">
          <div class="card">

          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src=<%= recipe.image_url %>>

         </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= recipe.title %></span>
              <p class = "links"><%= link_to 'More details', recipe_path(recipe) %></p>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= recipe.title %><i class="material-icons right">close</i></span>
              <p><%= recipe.ingredients %></p>
            </div>
           
          </div>
        </div>
     
          <% end %>
      </div>

     
     </div>
   </div>  